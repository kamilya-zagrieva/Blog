
<h1> Posts List</h1>


<ul>


	<% @posts.each do |post| %>
		<li>
		
			<p> <%= link_to post.title,post_path(post) %> created by <%= post.user.try (:login) %> 
			 <%= link_to "Edit post",edit_post_path(post) %>
			 <%= link_to "Delete post",post_path(post),method: :delete, confirm: 'Are you sure?' %>
			 </p>
			<p> It has <%= pluralize( post.comments.count, "comment") %>  </p>

		</li>


		<% end %>
</ul>

<%= link_to "New Post", new_post_path %>